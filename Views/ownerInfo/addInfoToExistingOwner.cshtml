
@{
    ViewBag.Title = "addInfoToExistingOwner";
}


<div class="modal-content">
    
    <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Owner Info</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <form id="myForm" style="margin-left:100px;margin-right:100px;" action="@Url.Action("addInfoToExistingOwner", "ownerInfo")" method="post" enctype="multipart/form-data">

        <div class="modal-body mx-3">

            <div class="form-group">
                <label for="bankName">Bank Name:</label>
                <input class="form-control" type="text" name="bankName" placeholder="Enter Bank Name">
            </div>

            <div class="form-group">
                <label for="branchName">Branch Name:</label>
                <input class="form-control" type="text" name="branchName" placeholder="Enter Branch Name">
            </div>

            <div class="form-group">
                <label for="branchAddress">Branch Address:</label>
                <input class="form-control" type="text" name="branchAddress" placeholder="Enter Branch Address">
            </div>

            <div class="form-group">
                <label for="dd">Cash/Cheque/DD/TT No:</label>
                <input class="form-control" type="text" name="dd" placeholder="Enter Cash/Cheque/DD/TT No">
            </div>

        </div>
        <div class="modal-footer d-flex justify-content-center">
            <button class="btn btn-success mt-2" style="background:lightblue;color:white;width:200px;" type="submit" onclick="getModal()">Apply</button>
        </div>
    </form>

</div>

<script>
    function getModal() {

        document.getElementById("myForm").submit();

    }
</script>